@model GreedIsland.Models.Card

@{
    ViewData["Title"] = "Edit Card";
}

<style>
    /* Add styling here to match the Greed Island theme */
    .card-edit-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 2rem;
        background-color: #2c2c2c; /* Greed Island card background */
        border-radius: 8px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
    }

        .card-edit-container h1 {
            color: #00ff99;
            text-align: center;
            margin-bottom: 2rem;
        }

    .greed-form-label {
        color: #b0b0b0;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .greed-form-control {
        background-color: #3b3b3b;
        border: 1px solid #5a5a5a;
        color: #e0e0e0;
        padding: 0.75rem 1rem;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .greed-form-control:focus {
            background-color: #4a4a4a;
            border-color: #00ff99;
            box-shadow: 0 0 0 0.25rem rgba(0, 255, 153, 0.25);
            color: #fff;
        }
</style>

<div class="card-edit-container">
    <h1>Edit Card</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="greed-form-label"></label>
            <input asp-for="Name" class="form-control greed-form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Rarity" class="greed-form-label"></label>
            <input asp-for="Rarity" class="form-control greed-form-control" />
            <span asp-validation-for="Rarity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="greed-form-label"></label>
            <input asp-for="ImageUrl" class="form-control greed-form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="greed-form-label"></label>
            <textarea asp-for="Description" class="form-control greed-form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Attack" class="greed-form-label"></label>
            <input asp-for="Attack" class="form-control greed-form-control" />
            <span asp-validation-for="Attack" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Defense" class="greed-form-label"></label>
            <input asp-for="Defense" class="form-control greed-form-control" />
            <span asp-validation-for="Defense" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Series" class="greed-form-label"></label>
            <input asp-for="Series" class="form-control greed-form-control" />
            <span asp-validation-for="Series" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-warning">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}