@model GreedIsland.Models.Card

@{
    ViewData["Title"] = "Card Details";
}

@* /* TODO:
 - Show full-size image, name, rarity badge, description.
 - Show attack/defense/series/created date.
 - Add back button to Index and Edit button.
 - Style to fit Greed Island theme (card border, background pattern).
*/ *@
<div class="container">
    <h1>@Model.Name <small class="text-muted">(@Model.Rarity)</small></h1>
    <div class="row">
        <div class="col-md-5">
            <img src="@(Model.ImageUrl ?? Url.Content("~/images/cards/placeholder.png"))" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-7">
            <p>@Model.Description</p>
            <dl class="row">
                <dt class="col-sm-3">Attack</dt>
                <dd class="col-sm-9">@Model.Attack ?? 0</dd>
                <dt class="col-sm-3">Defense</dt>
                <dd class="col-sm-9">@Model.Defense ?? 0</dd>
                <dt class="col-sm-3">Series</dt>
                <dd class="col-sm-9">@Model.Series</dd>
                <dt class="col-sm-3">Created</dt>
            </dl>
            <a class="btn btn-secondary" asp-action="Index">Back</a>
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </div>
    </div>
</div>