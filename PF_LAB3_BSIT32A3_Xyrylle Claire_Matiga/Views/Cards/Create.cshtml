@model GreedIsland.Models.Card

@{
    ViewData["Title"] = "Create Card";
}

<div class="container mt-4">
    <h1 class="mb-4">Create New Card</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Rarity -->
        <div class="mb-3">
            <label asp-for="Rarity" class="form-label"></label>
            <select asp-for="Rarity" class="form-select">
                <option value="">-- Select Rarity --</option>
                @foreach (var r in Enum.GetValues(typeof(GreedIsland.Models.Rarity)))
                {
                    <option value="@r">@r</option>
                }
            </select>
            <span asp-validation-for="Rarity" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Image -->
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image (URL or Upload)</label>
            <input asp-for="ImageUrl" class="form-control mb-2" placeholder="Paste image URL here" />
            <input type="file" name="ImageFile" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <!-- Attack & Defense -->
        <div class="mb-3 row">
            <div class="col">
                <label asp-for="Attack" class="form-label"></label>
                <input asp-for="Attack" class="form-control" />
                <span asp-validation-for="Attack" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Defense" class="form-label"></label>
                <input asp-for="Defense" class="form-control" />
                <span asp-validation-for="Defense" class="text-danger"></span>
            </div>
        </div>

        <!-- Series -->
        <div class="mb-3">
            <label asp-for="Series" class="form-label"></label>
            <input asp-for="Series" class="form-control" />
            <span asp-validation-for="Series" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
