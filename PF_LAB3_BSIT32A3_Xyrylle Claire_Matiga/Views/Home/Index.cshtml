@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #e0e0e0;
    }

    .home-container {
        padding: 4rem 2rem;
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6));
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

        .home-container h1 {
            color: #00ff99;
            text-shadow: 2px 2px 5px #000;
        }

        .home-container .lead {
            font-style: italic;
            color: #b0b0b0;
        }

    .logo-container {
        position: relative;
        overflow: hidden;
        width: 300px;
        height: 300px;
        margin: 2rem auto;
        border-radius: 50%;
        background: linear-gradient(45deg, #00ff99, #00cc66);
        box-shadow: 0 0 15px #00ff99;
    }

        .logo-container img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    .btn-greed-primary {
        background-color: #00cc66;
        border-color: #00b359;
        color: #fff;
        font-weight: bold;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        transition: transform 0.2s ease, background-color 0.2s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

        .btn-greed-primary:hover {
            background-color: #00e673;
            transform: translateY(-3px);
        }
</style>

<div class="text-center home-container">
    <h1 class="display-4">Welcome to the Greed Island Card Database</h1>
    <p class="lead">Track, view, and manage all Greed Island cards.</p>

    <!-- Logo with a glowing effect -->
    <div class="logo-container">
        <img src="~/images/greed-island-logo.png" alt="Greed Island Logo" class="img-fluid" />
    </div>

    <!-- TODO: You can add featured cards preview here -->
    <a class="btn btn-greed-primary" asp-controller="Cards" asp-action="Index">View Cards</a>
</div>
